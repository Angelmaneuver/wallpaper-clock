{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "wallpaper-clock",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "show": true,
        "hide": true,
        "close": true,
        "startDragging": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://*", "https://*"]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline' 'self' img-src: *"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "angelmaneuver.wallpaper-clock",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
